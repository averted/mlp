@import 'fonts';

$primary-accent-color = #0b8ef0;

body {
  margin: 0;
  padding: 0;
}

#mobile-app {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  min-height: 100%;
  background-image: url('../img/bg.png');
  background-size: cover;
  background-repeat: no-repeat;
  color: #fff;
  text-align: center;
  font-family: 'open-sans-light';
  font-weight: 400;

  .app-container {
    margin: 0 auto;
    max-width: 400px;
    padding: 80px 20px;

    .logo-img {
      width: 180px;
      height: 50px;
      margin: 0 auto;
      margin-bottom: 80px;
      background-image: url('../img/logo.png');
      background-size: contain;
      background-repeat: no-repeat;
    }

    .heading {
      h1 {
        font-size: 32px;
        font-weight: 500;
      }

      p {
        font-size: 18px;
        line-height: 28px;
      }
    }

    .actions {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      margin-bottom: 100px;
      font-size: 14px;
      font-weight: 600;

      a {
        color: #fff;
        text-decoration: none;
      }

      .btn-primary {
        display: block;
        margin: 20px auto;
        padding: 15px 20px;
        max-width: 240px;
        border-radius: 3px;
        background: $primary-accent-color;

        &:hover {
          background: darken($primary-accent-color, 10%);
        }
      }

      .sub {
        display: inline-block;
        border-bottom: 1px solid $primary-accent-color;
        line-height: 30px;
      }
    }
  }
}
